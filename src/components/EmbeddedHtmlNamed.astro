---
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<section>
  <h4>{name} condition</h4>
  <slot name="default">
    <p>{name} is no problem</p>
  </slot>
  <h5>details</h5>
  <slot name="detail">
    <p>Nothing happen</p>
  </slot>
</section>

<style>
  section {
    border: green 1px dashed;
    margin: 10px;
  }
</style>
